  "installer": {
    "script": [
      "Start-Process -Wait \"$$dir\\$$fname\" -ArgumentList '/S'",
      "# Disable built-in updater if applicable",
      "Remove-Item -ErrorAction Ignore -Recurse \"$$env:LOCALAPPDATA\\Logitech\\G HUB\\Update\" | Out-Null",
      "$$updateFile = New-Item -Path \"$$env:LOCALAPPDATA\\Logitech\\G HUB\" -Name Update -ItemType File -Value \"Disabled by Scoop\" -Force",
      "$$updatefile.Attributes = 'ReadOnly', 'System'",
      "Remove-Item \"$$dir\\$$fname\" -ErrorAction SilentlyContinue"
    ]
  },
  "shortcuts": [["LogiHub.exe", "Logitech G HUB"]],
  "uninstaller": {
    "script": [
      "if ($$cmd -ne 'uninstall') { return }",
      "Start-Process -Wait \"$$env:ProgramFiles(x86)\\Logitech\\G HUB\\uninstall.exe\" -ArgumentList '/S'"
    ]
  },
  "checkver": {
    "url": "https://www.logitechg.com/en-us/innovation/g-hub.html",
